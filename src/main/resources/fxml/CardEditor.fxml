<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">

    <center>
        <SplitPane dividerPositions="0.25" orientation="HORIZONTAL" BorderPane.alignment="CENTER">
            <items>
                <SplitPane dividerPositions="0.4" orientation="VERTICAL">
                    <items>
                        <VBox spacing="5">
                     <BorderPane>
                        <left>
                                  <Label text="%topics" BorderPane.alignment="CENTER" />
                        </left>
                        <right>
                           <HBox spacing="5.0" BorderPane.alignment="CENTER">
                              <children>
                                 <Button fx:id="deleteTopic" mnemonicParsing="false" onAction="#handleDeleteTopic">
                                    <graphic>
                                       <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                          <image>
                                             <Image url="@/images/delete.png" />
                                          </image>
                                       </ImageView>
                                    </graphic>
                                    <padding>
                                       <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                    </padding>
                                 </Button>
                                 <Button fx:id="editTopic" mnemonicParsing="false" onAction="#handleEditTopic">
                                    <graphic>
                                       <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                          <image>
                                             <Image url="@/images/edit.png" />
                                          </image>
                                       </ImageView>
                                    </graphic>
                                    <padding>
                                       <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                    </padding>
                                 </Button>
                                 <Button mnemonicParsing="false" onAction="#handleAddTopic">
                                    <graphic>
                                       <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                          <image>
                                             <Image url="@/images/add.png" />
                                          </image>
                                       </ImageView>
                                    </graphic>
                                    <padding>
                                       <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
                                    </padding>
                                 </Button>
                              </children>
                           </HBox>
                        </right>
                        <VBox.margin>
                           <Insets left="5.0" right="5.0" />
                        </VBox.margin>
                     </BorderPane>
                            <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                                <ListView fx:id="topicList" VBox.vgrow="ALWAYS" />
                            </ScrollPane>
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                        </VBox>
                        <VBox spacing="5">
                            <Label text="%cards">
                        <VBox.margin>
                           <Insets left="5.0" />
                        </VBox.margin>
                            </Label>
                            <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                                <ListView fx:id="cardList" VBox.vgrow="ALWAYS" />
                            </ScrollPane>
                     <padding>
                        <Insets top="5.0" />
                     </padding>
                        </VBox>
                    </items>
                </SplitPane>
                <BorderPane>
                    <top>
                        <VBox spacing="5" BorderPane.alignment="CENTER">
                            <Label text="%question" />
                            <TextField fx:id="question" />
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                        </VBox>
                    </top>
                    <center>
                        <SplitPane dividerPositions="0.5" orientation="VERTICAL" BorderPane.alignment="CENTER">
                            <items>
                                <VBox spacing="5">
                                    <Label text="%solution">
                                        <VBox.margin>
                                            <Insets />
                                        </VBox.margin>
                                    </Label>
                                    <TextArea fx:id="solution" VBox.vgrow="ALWAYS" />
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                                </VBox>
                                <VBox spacing="5">
                                    <Label text="%hint" />
                                    <TextArea fx:id="hint" VBox.vgrow="ALWAYS" />
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                                </VBox>
                            </items>
                        </SplitPane>
                    </center>
                </BorderPane>
            </items>
        </SplitPane>
    </center>
    <bottom>
        <ButtonBar BorderPane.alignment="BOTTOM_CENTER">
            <buttons>
                <Button fx:id="deleteButton" onAction="#handleDelete" text="%delete" />
                <Button onAction="#handleClear" text="%clear" />
                <Button fx:id="addOrUpdateButton" onAction="#handleAddOrUpdate" text="%add" />
                <Button fx:id="saveButton" onAction="#handleSave" text="%save" ButtonBar.buttonData="RIGHT" />
            </buttons>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
        </ButtonBar>
    </bottom>
</BorderPane>
