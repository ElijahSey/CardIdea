<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.screens.Menu">
   <children>
      <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" spacing="20.0">
         <children>
               <ScrollPane fitToHeight="true" fitToWidth="true">
                   <ListView fx:id="setList" VBox.vgrow="ALWAYS" />
               </ScrollPane>
               <VBox alignment="CENTER" spacing="10">
                   <Button fx:id="newButton" maxWidth="1.7976931348623157E308" onAction="#newSet" text="%new" VBox.vgrow="ALWAYS" />
                   <Button fx:id="startButton" disable="true" maxWidth="1.7976931348623157E308" onAction="#startSet" text="%start" VBox.vgrow="ALWAYS" />
                   <Button fx:id="editButton" disable="true" maxWidth="1.7976931348623157E308" onAction="#editSet" text="%edit" VBox.vgrow="ALWAYS" />
                   <Button fx:id="deleteButton" disable="true" maxWidth="1.7976931348623157E308" onAction="#deleteSet" text="%delete" VBox.vgrow="ALWAYS" />
               </VBox>
         </children>
      </HBox>
      <TilePane alignment="TOP_CENTER" prefHeight="20.0" VBox.vgrow="NEVER" />
   </children>
</VBox>
